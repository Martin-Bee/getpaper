doctype html
html
  head
    meta(name='viewport', content='width=device-width')
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    link(href='css?family=Encode+Sans&display=swap' rel='stylesheet')
    style
      include styles.css
  body
    .outer
      .logo
        img(src='/o/logo%2F3lines3dotsGPlogoSmall.png?alt=media&token=90aee935-121b-4d4c-91e7-5d210fe48bd6' alt='logo')
      .inner
        h1(style="color: #67D533") !{emailTitle}
        block content